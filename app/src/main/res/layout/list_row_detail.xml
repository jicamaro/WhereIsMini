<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/list_row_header_padding"
    android:paddingRight="@dimen/list_row_header_padding"
    android:paddingBottom="@dimen/list_row_detail_padding"
    android:paddingTop="@dimen/list_row_detail_padding" >

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/list_row_detail_icon"
        android:layout_gravity="center_vertical"
        android:paddingRight="@dimen/list_row_header_padding"
        android:src="@drawable/ic_launcher"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@android:color/white"
            android:id="@+id/list_row_detail_label"
            android:textAppearance="@android:style/TextAppearance.Medium"/>

    </LinearLayout>
</LinearLayout>